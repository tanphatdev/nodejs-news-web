                        </ul>
                        <a href="article/<%= itemsSpecial[0].slug %>">
                            <h4><%= itemsSpecial[1].name %></h4>
                        </a>
                        <ul class="meta">
                            <li>
                                <a href="#"><span class="lnr lnr-user"></span><%= itemsSpecial[1].created.user_name %></a></li>
                            <li>
                                <a href="#">
                                    <span class="lnr lnr-calendar-full"></span>
                                    <%= moment(itemsSpecial[1].created.time).format(systemConfig.format_time_frontend) %>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="single-top-post mt-10">
                    <div class="feature-image-thumb relative">
                        <div class="overlay overlay-bg"></div>
                        <img class="img-fluid" src="<%= folder_uploads + itemsSpecial[2].thumb %>" alt="top-post-image">
                    </div>
