<% 
    specialHelper = (linkPrefix, special, id) => {
        let htmlSpecial = '';
        let link = linkPrefix + 'change-special/' + id + '/' + special;

        if(special==="active" ) {
            htmlSpecial = `<span class="label label-success">Top Post</span>`;
        }
        else if(special==="inactive") {
            htmlSpecial = `<span class="label label-warning">Normal</span>`;
        }
        
        return `<a href="${link}">${htmlSpecial}</a>`;
    }
%>