<% if(errors) { %>
    <div class="row">
        <div class="col-lg-6">
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% errors.forEach( error => { 
                        let arrWord = error.path.split("_");
                        let strWord = "";
                        arrWord.forEach((word) => {
                            strWord += word.charAt(0).toUpperCase() + word.slice(1) + " ";
                        });
                    %>
                        <li><b><%= strWord %>:</b> <%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
<% } %>