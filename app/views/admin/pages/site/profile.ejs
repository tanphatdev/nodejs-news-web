<%
    const linkPrefix = systemConfig.prefixAdmin + '/';
%>

<%- locals.flash %>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Change Profile
            </div>
            <div class="panel-body">
                <% include ./../../elements/errors %>
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="<%= linkPrefix %>profile" method="POST">
                            <div class="form-group">
                                <label>Full Name</label>
                                <input class="form-control" name="fullname" value="<%= item.fullname %>">
                            </div>
                            <div class="form-group">
                                <label>User Name</label>
                                <input class="form-control" name="username" value="<%= item.username %>" readonly>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input class="form-control" name="phone" value="<%= item.phone %>">
                            </div>
                            <input class="form-control" name="id" value="<%= item.id %>" type="hidden">
                            <button type="submit" class="btn btn-primary">Submit </button>
                            <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
