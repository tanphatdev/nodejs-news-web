<%
    const linkPrefix = systemConfig.prefixAdmin + '/';
%>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <% include ./../../elements/errors %>
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="<%= linkPrefix %>change-password" method="POST">
                            <div class="form-group">
                                <label>Old Password</label>
                                <input class="form-control" type="password" name="old_password" value="">
                            </div>
                            <div class="form-group">
                                <label>Conform Password</label>
                                <input class="form-control" type="password" name="conform_password" value="">
                            </div>
                            <div class="form-group">
                                <label>New Password</label>
                                <input class="form-control" type="password" name="new_password" value="">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit </button>
                            <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
